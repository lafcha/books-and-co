<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
				           and uncomment the following Encore helpers to start using Symfony UX #}
		<meta
		name="viewport" content="width=device-width, initial-scale=1.0"/>

		{#FONTS#}
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link
		href="https://fonts.googleapis.com/css2?family=Lily+Script+One&display=swap" rel="stylesheet">

		{#CSS#}
		<link href="../src/tailwind.css" rel="stylesheet">
		<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
		<link href="../public/assets/css/style.css" rel="stylesheet" href="style.css">
		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		<div class="container mx-auto">
			{% block header%}
				<header class="text-gray-600 body-font py-6">
					<div class="flex items-center justify-between flex-wrap">
						<a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
							<img src="{{asset("assets/img/illustrations")}}/logo.svg" alt="Logo de BooksAndCo">
							<span class="ml-3 text-xl logo text-pink-600">Books&amp;Co</span>
						</a>
						<div>
							<a href="#" class="font-semibold">Cr√©er un compte</a>
						<button class="inline-flex items-center bg-yellow-300 border-0 py-2 px-6 focus:outline-none hover:bg-gray-200 rounded-full text-base mt-4 md:mt-0">Connexion
						</div>						
						</div>
					</header>
			{% endblock %}

			{% block main %} {% endblock %}

			{% include 'footer.html.twig' %}			
		</div>
	</body>
</html>
