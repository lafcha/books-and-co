{% extends 'base' ~ ((app.user) ? '' : '-non-connecte') ~ '.html.twig' %}

{% block main %}
	{# SECTION 1: PRESENTATION #}
	<section id="welcome" class="bg-pink-light lg:py-24 py-12 px-4 lg:flex justify-between items-center">
		<div class="item lg:w-96 mx-auto text-center">
			<h1 class="text-3xl my-4 text-pink font-cursive">Books&amp;Co</h1>
			<h3 class="tracking-widest uppercase my-4 text-yellow-dark ">La bibliothèque entre particuliers</h3>
			<p class="my-2">Books&amp;Co vous permet de prêter ou d’emprunter des livres près de chez vous auprès de particuliers.</p>
			<p class="my-2">Sélectionnez votre département pour voir les livres disponibles près de chez vous !
			</p>
			<div class="items-center lg:py-0 py-4">
				<div class="relative inline-flex my-2">
					<svg class="w-2 h-2 absolute top-0 right-0 m-4 pointer-events-none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 412 232"><path d="M206 171.144L42.678 7.822c-9.763-9.763-25.592-9.763-35.355 0-9.763 9.764-9.763 25.592 0 35.355l181 181c4.88 4.882 11.279 7.323 17.677 7.323s12.796-2.441 17.678-7.322l181-181c9.763-9.764 9.763-25.592 0-35.355-9.763-9.763-25.592-9.763-35.355 0L206 171.144z" fill="#648299" fill-rule="nonzero"/></svg>
				{{ form_start(searchForm) }}
					<select name="search_form[county]" class="rounded-full text-white lg:text-base text-sm h-10 pl-5 pr-10 bg-blue focus:outline-none appearance-none county-form" id="search_form_county" dataset>
						<option value="00">Département</option>
					</select>
				</div>
				<div>
					<button type="submit" class="bg-pink hover:bg-yellow-dark text-white lg:text-base text-sm px-4 py-3 ml-8 rounded-full submit">
						Rechercher
					</button>
				</div>
			</div>
            {{ form_end(searchForm) }}
		</div>
		<div class="item lg:w-96 mx-auto">
			<img class="mx-auto" src="{{asset("assets/img/illustrations")}}/homepage-img.svg" alt="">
		</div>
	</section>

	{# SECTION 2 : EMPRUNTEZ UN LIVRE #}
	<section id="borrow" class="lg:py-24 py-12 px-4">
		<h2 class="text-center text-3xl font-cursive my-4 text-pink">Empruntez un livre près de chez vous</h2>
		<h3 class=" text-center tracking-widest uppercase my-4">N'achetez pas... Empruntez !</h3>
        {# Section de 3 items #}
		<div class="container px-5 py-12 mx-auto">
			<div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 md:space-y-0 space-y-6">
            {# Item 1 #}
				<div class="p-4 md:w-1/3 flex flex-col text-center items-center mx-auto">
                    <div class="w-20 h-20 inline-flex items-center justify-center mb-5 flex-shrink-0">
                        <img src="{{asset("assets/img/illustrations")}}/looking-glass.svg" alt="Icône loupe">
                    </div>
                    <div class="flex-grow">
                        <p class="leading-relaxed text-base">Recherchez un livre qui vous plaît</p>
                    </div>
				</div>
            	{# Item 2 #} 
				<div class="p-4 md:w-1/3 flex flex-col text-center items-center mx-auto">
                    <div class="w-20 h-20 inline-flex items-center justify-center mb-5 flex-shrink-0">
                        <img src="{{asset("assets/img/illustrations")}}/hour-glass.svg" alt="Icône sablier">
                    </div>
                    <div class="flex-grow">
                        <p class="leading-relaxed text-base">Prenez contact avec le prêteur &amp; fixez une date et une heure de rendez-vous !</p>
                    </div>
				</div>
            	{# Item 3 #}
				<div class="p-4 md:w-1/3 flex flex-col text-center items-center mx-auto">
					<div class="w-20 h-20 inline-flex items-center justify-center mb-5 flex-shrink-0">
						<img src="{{asset("assets/img/illustrations")}}/book-lending-left.svg" alt="Icône prêt">
					</div>
					<div class="flex-grow">
						<p class="leading-relaxed text-base">Récupérez le livre</p>
					</div>
				</div>	
			</div>	
        </div>
        <a href="{{ path('app_register') }}"><button class=" text-center flex mx-auto lg:mt-24 mt-6 bg-yellow py-2 px-8 focus:outline-none hover:bg-pink text-lg rounded-full">Créer un compte</button></a>
    </section>
		{# SECTION 3 : PRETEZ UN LIVRE #}
	<section id="borrow" class="lg:py-24 py-12 bg-yellow-light mb-12">
		<h2 class="text-center text-3xl font-cursive my-4">Prêtez vos livres <!DOCTYPE html></h2>
		<h3 class=" text-center tracking-widest uppercase my-4 text-yellow-dark">Ne laissez pas vos livres prendre la poussière !</h3>
        {# Section de 3 items #}
		<div class="container px-5 py-12 mx-auto">
			<div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 md:space-y-0 space-y-6">
            	{# Item 1 #}
				<div class="p-4 md:w-1/3 flex flex-col text-center items-center mx-auto">
					<div class="w-20 h-20 inline-flex items-center justify-center mb-5 flex-shrink-0">
						<img src="{{asset("assets/img/illustrations")}}/books.svg" alt="Icône bibliothèque">
					</div>
					<div class="flex-grow">
						<p class="leading-relaxed text-base text-pink">Ajoutez un livre à votre bibliothèque</p>
					</div>
				</div>
            	{# Item 2 #} 
				<div class="p-4 md:w-1/3 flex flex-col text-center items-center mx-auto">
					<div class="w-20 h-20 inline-flex items-center justify-center mb-5 flex-shrink-0">
						<img src="{{asset("assets/img/illustrations")}}/location.svg" alt="Icône lieu">
					</div>
					<div class="flex-grow">
						<p class="leading-relaxed text-base text-pink">Vous avez été contacté ? Fixez une date et un lieu avec l'emprunteur !</p>
					</div>
				</div>
            	{# Item 3 #}
				<div class="p-4 md:w-1/3 flex flex-col text-center items-center mx-auto">
					<div class="w-20 h-20 inline-flex items-center justify-center mb-5 flex-shrink-0">
						<img src="{{asset("assets/img/illustrations")}}/book-lending-left.svg" alt="Icône prêt">
					</div>
					<div class="flex-grow">
						<p class="leading-relaxed text-base text-pink">Rencontrez l'emprunteur et confiez-lui votre livre</p>
					</div>
				</div>	
			</div>	
        </div>
        <a href="{{ path('app_register') }}"><button class=" text-center flex mx-auto lg:mt-24 mt-6 text-white bg-pink border-0 py-2 px-8 focus:outline-none hover:bg-yellow-dark text-lg rounded-full">Créer un compte</button></a>
    </section>
		{% endblock %}
