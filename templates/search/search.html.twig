{% extends 'base' ~ ((app.user) ? '' : '-non-connecte') ~ '.html.twig' %}

{% block title %}Recherche
{% endblock %}

{% block main %}

{# -- Search Form --#}
	{{ form_start(form) }}
	<div class="mt-5 flex items-center">
		<div id="county-error"></div>
		<div class="relative inline-flex mr-5">
			<svg class="w-2 h-2 absolute top-0 right-0 m-4 pointer-events-none" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 412 232"><path d="M206 171.144L42.678 7.822c-9.763-9.763-25.592-9.763-35.355 0-9.763 9.764-9.763 25.592 0 35.355l181 181c4.88 4.882 11.279 7.323 17.677 7.323s12.796-2.441 17.678-7.322l181-181c9.763-9.764 9.763-25.592 0-35.355-9.763-9.763-25.592-9.763-35.355 0L206 171.144z" fill="#648299" fill-rule="nonzero"/></svg>
			<select name="search_form[county]" class="bg-yellow rounded-full text-blue h-10 pl-5 pr-10 focus:outline-none appearance-none county-form" id="search_form_county" {{ (app.request.query.all('search_form')['county'] is defined) ? ('data-county=' ~ app.request.query.all('search_form')['county']) : ''}}>
				<option value="00">Département</option>
			</select>
		</div>

		<button type="submit" class="bg-blue h-10 px-6 md:px-8 py-2 rounded-full items-center focus:outline-none text-xs md:text-sm text-white submit">Rechercher</button>
	</div>
	{{ form_end(form) }}
{# -- If no results--#}
	{% if app.request.query.all != null and book == null %}
		<section>
			<div class="container px-5 mx-auto">
				<div class="xl:w-1/2 lg:w-3/4 w-full mx-auto text-center">
					<i class="fas fa-heart-broken text-pink text-4xl mb-5"></i>
					<p class="leading-relaxed text-lg">Désolé, aucun livre n'est disponible dans ce département !</p>
					<span class="inline-block h-1 w-10 rounded bg-blue mt-8 mb-6"></span>
				</div>
			</div>
		</section>
	{% elseif book != null %}

{# -- Search results--#}
	<h1 class="text-blue font-cursive text-3xl flex justify-center mt-10">Résultat de la recherche</h1>
	<section class="overflow-hidden">
		<div class="container px-5 mx-auto">
			{% for usersBook in book %}
				<div class="my-8 divide-y-2 divide-gray-100">
					<div class="py-8 flex flex-wrap md:flex-nowrap">
						<div class="md:w-1/12 md:mb-0 mb-6 flex-shrink-0 mr-10 flex flex-col">
							<a href=""><img src="{{ usersBook.book.cover != null ?  asset("assets/img/uploads/book_cover/") ~ usersBook.book.cover : asset("assets/img/illustrations/book-cover.jpg") }}"></a>
						</div>
						<div class="md:flex-grow">
							<h2 class="text-2xl font-medium title-font mb-2 uppercase text-pink">
								<a href="">{{ usersBook.book.title }}</a>
								<span class="text-sm text-yellow-dark">
									<i class="fas fa-user mr-3 ml-3"></i>
									{{ usersBook.user.pseudo }}</span>
							</h2>
							<p class="leading-relaxed">Auteur :
								{{ usersBook.book.author }}</p>
							<p class="italic">Editeur :
								{{ usersBook.book.editor }}</p>
							<p class="italic">ISBN :
								{{ usersBook.book.isbn }}</p>
						</div>
						<div class="flex flex-col justify-between">
							<p class="text-yellow-dark"><i class="fas fa-map-marker-alt mr-3"></i>{{ usersBook.user.city }}</p>
							<a href="{{ path('library_book_read', {'userSlug': usersBook.user.slug, 'slug': usersBook.book.slug }) }}" class="bg-pink h-10 px-6 md:px-8 py-2 rounded-full items-center focus:outline-none md:text-sm text-white">Voir plus</a>
						</div>
					</div>
				</div>    
				<hr class="my-10 border-1 border-blue-900">
			{% endfor %}
		</div>
	</section>

	{% endif %}
{% endblock %}